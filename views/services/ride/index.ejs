<%- layout("/layouts/boilerplate") %>
    <div class="row p-0 m-0 w-100">
        <div class="container-fluid">
            <div class="mt-5 mx-auto  shadow-lg" style="max-width: 900px;">
                <div class="row g-0 bg-light">
                    <div class="col-md-5 p-3 m-0">
                        <h1 class="serviceTitle mb-5">Request a ride now</h1>
                        <form class="driver_form" action="/ride" method="POST">
                            <div class="form-group">
                                <input class="form-control mx-auto mb-4" id="pickup" type="text" name="service[pickup]"
                                    placeholder="Enter pickup Location" required>
                                <input class="form-control mx-auto mb-3" id="destination" type="text"
                                    name="service[destination]" placeholder="Enter destination" required>
                            </div>

                            <button class="btn btn-dark my-3" id="find_vehicle" type="submit">Request
                                Now</button>
                            <!-- <button class="btn btn-secondary my-3" type="button" name="submit">Request
                                Later</button> -->
                        </form>
                    </div>

                    <div class="col-md-7">
                        <div class="container m-0 p-0">
                            <img class="img-fluid" style="min-width: 100%;"
                                src="https://images.unsplash.com/photo-1553440569-bcc63803a83d?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=711&q=80"
                                alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>