<%- layout("/layouts/boilerplate") %>
    <div class="row p-0 m-0 w-100">
        <div class="container-fluid">
            <div class="mt-5 mx-auto  shadow-lg" style="max-width: 900px;">
                <div class="row g-0 bg-light">
                    <div class="col-md-12 p-3 m-0">
                        <h1 class="serviceTitle mb-5 text-center">Complete your booking</h1>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card" style="width: 25rem;">
                                    <h5 class="card-title">Driver Information:</h5>
                                    <img src="<%= driver.driverImage %>" class="card-img-top rounded-circle" alt="...">
                                    <div class="card-body">
                                        <p class="card-text">
                                            <%= driver.driverName %> is 5
                                                minutes away.
                                        </p>
                                        <p class="card-text">
                                            Vehicle: <%= driver.vehicle.name + " " + driver.vehicle.year %>
                                                <span><img class="img-fluid card-img-top"
                                                        src="<%= driver.vehicle.vehicleImage %>" alt=""></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card " style="width: 25rem;">
                                    <div class="card-body">
                                        <h5 class="card-title">Booking Information:</h5>
                                        <p class="card-text">
                                            Pickup Location: <%= pickup %>
                                        </p>
                                        <p class="card-text">
                                            Destination: <%= destination %>
                                        </p>
                                        <p class="card-text">
                                            Date: <%= date %>
                                        </p>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text">Service: Economical ride</p>
                                        <p class="card-text">Cost (plus applicable taxes.): $19.99</p>
                                        <form action="/orderProcess" method="POST">
                                            <button class="btn btn-success" type="submit">Confirm Booking</button>
                                        </form>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>